<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.CategoryHomeActivity">

    <RelativeLayout
        android:id="@+id/rel_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/category_back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/frontarrow"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/category_rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/rel_category"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/category_linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp">


            <ImageView
                android:id="@+id/category_t_shirts"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/tshirts" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="t-shirts"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />


            <ImageView
                android:id="@+id/category_sports_t_shirts"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/sports"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="sport t-shirts"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_linear_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_linear_1"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

        <ImageView
            android:id="@+id/category_female_dresses"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/female_dresses"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="female dresses"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />

        <ImageView
            android:id="@+id/category_sweather"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/sweather"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="sweather"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_linear_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_linear_2"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/category_glasses"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/glasses"

            android:layout_below="@+id/category_sweather"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Glasses"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />

        <ImageView
            android:id="@+id/category_purses_bags_wallets"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/purses_bags"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/category_glasses"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Bags"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_linear_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_linear_3"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/category_hats_caps"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hats"

            android:layout_below="@+id/category_purses_bags_wallets"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hats"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />

        <ImageView
            android:id="@+id/category_shoes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/shoess"
            android:layout_marginLeft="40dp"

            android:layout_below="@+id/category_hats_caps"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Shoes"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_linear_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_linear_4"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/category_headphones_handfree"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/headphoness"
            android:layout_below="@+id/category_shoes"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="HeadPhones"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />

        <ImageView
            android:id="@+id/category_laptop_pc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/laptops"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/category_headphones_handfree"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Laptops"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_linear_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_linear_5"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/category_watches"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/watches"
            android:layout_below="@+id/category_laptop_pc"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Watches"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />

        <ImageView
            android:id="@+id/category_mobilephones"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/mobiles"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/category_watches"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="MobilePhones"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />
        </LinearLayout>




    </RelativeLayout>


</RelativeLayout>